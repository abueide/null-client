<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox layoutY="90.0" prefHeight="170.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox prefHeight="170.0" prefWidth="300.0" spacing="10.0">
                    <children>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="App Data Folder" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <TextField fx:id="appDataDir" prefWidth="220.0" />
                                <Button fx:id="dirButton1" mnemonicParsing="false" prefWidth="50.0" text="..." />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Database Location" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <TextField fx:id="databaseDir" prefWidth="220.0" />
                                <Button fx:id="dirButton2" mnemonicParsing="false" prefWidth="50.0" text="..." />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" />
                                <Button fx:id="defaultButton" mnemonicParsing="false" text="Set Defaults" />
                                <Button fx:id="saveButton" mnemonicParsing="false" text="Save" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
